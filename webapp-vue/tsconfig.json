{
  "compilerOptions": {
    "target": "es2018",
    "module": "esNext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "mocha", "chai"],
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["../site-lib/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
    // "node_modules/@gaia-project/site-lib/*.ts"
  ],
  "exclude": ["node_modules"]
}
